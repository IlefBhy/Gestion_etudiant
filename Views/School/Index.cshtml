@model IEnumerable<Gestion_etudiant.Models.School>

<div class="container mt-5">
    <h2 class="text-center mb-4">Liste des Écoles</h2>

    <div class="table-responsive">
        <table class="table table-bordered table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Nom de l'école</th>
                    <th>Adresse</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var school in Model)
                {
                    <tr>
                        <td>@school.SchoolName</td>
                        <td>@school.SchoolAdress</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@school.SchoolID" class="btn btn-info btn-sm me-2">Détails</a>
                            <a asp-action="Edit" asp-route-id="@school.SchoolID" class="btn btn-warning btn-sm me-2">Modifier</a>
                            <a asp-action="Delete" asp-route-id="@school.SchoolID" class="btn btn-danger btn-sm">Supprimer</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="text-center mt-4">
        <a asp-action="Create" class="btn btn-primary">Ajouter une école</a>
    </div>
</div>
