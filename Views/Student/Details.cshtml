@model Gestion_etudiant.Models.Student

<h2>Détails de l'Étudiant</h2>

<div>
    <h4>@Model.StudentName</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Âge</dt>
        <dd class="col-sm-10">@Model.Age</dd>

        <dt class="col-sm-2">Date de Naissance</dt>
        <dd class="col-sm-10">@Model.BirthDate.ToString("d")</dd>

        <dt class="col-sm-2">École</dt>
        <dd class="col-sm-10">@Model.School?.SchoolName</dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.StudentId" class="btn btn-primary">Modifier</a>
    <a asp-action="Index" class="btn btn-secondary">Retour à la liste</a>
</div>
